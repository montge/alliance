            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.txt</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <!-- Security Files -->
        <fileSet>
            <directory>${setup.folder}/security</directory>
            <outputDirectory>/security</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>

